@model NotaModel
@*
*@
@{
    ViewData["Title"] = "Editar Nota";
}
div class = "text center"
<h1 class="display-4">Editar Nota</h1>

<form asp-controller="Nota" asp-action="Criar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nota">Nota</label>
        <input type="text" asp-for="nota" class="form-control" placeholder="Digite a Nota do aluno" />
    </div>

    <div class="form-group">
        <label for="data">Data</label>
        <input type="text" asp-for="data" class="form-control" placeholder="Digite a data de lancçamento da nota" />
    </div>
    <select class="form-group"
        <option selected>Open this select menu</option>
        <option value="nome"/>
    </div>
    <select class="form-group"
        <option selected>Open this select menu</option>
        <option value="matéria"/>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Adicionar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Nota" asp-action="Index" role="button">Voltar</a>


</form>