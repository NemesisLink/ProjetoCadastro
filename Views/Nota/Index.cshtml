@{
    ViewData["Title"] = "Listagem de Nota";

}
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start"
     <a class="btn btn-primary" role="button" asp-controller="Nota" asp-action="Criar">Adcionar nova Nota</a>
    </div>
<h1 class="display-4">Listagem de Matérias</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nota</th>
            <th scope="col">Data de lançamento</th>
            <th scope="col">Aluno</th>
            <th scope="col">Matéria</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (NotaModel nota in Model)
            {
        <tr>
            <th scope="row">@nota.Id</th>
            <td>@nota.nota</td>
            <td>@nota.data</td>
            <td>@nota.AlunoModel</td>
            <td>@nota.MatériaModel</td>
            <div class="btn-group" role="group">
                <a role="button" class="btn btn-primary" asp-controller="Matéria" asp-action="Editar">Editar</a>
                <a role="button" class="btn btn-danger" asp-controller="Matéria" asp-action="ApagarConfirmacao">Apagar</a>
            </div>
        </tr>
            }
        }
    </tbody>
</table>
</div>
