@{
    ViewData["Title"] = "Listagem de Matérias";

}
<div class="text-center">
<div class="d-grid gap-2 d-md-flex justify-content-md-start" 
     <a class="btn btn-primary" role="button" asp-controller="Matéria" asp-action="Criar">Adcionar nova matéria</a>
    </div>
    <br/>
<h1 class="display-4">Listagem de Matérias</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Descrição</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (MatériaModel matéria in Model)
            {
        <tr>
            <th scope="row">@matéria.Id</th>
            <td>@matéria.nome</td>
            <td>@matéria.descricao</td>
            <div class="btn-group" role="group">
                <a role="button" class="btn btn-primary" asp-controller="Matéria" asp-action="Editar">Editar</a>
                <a role="button" class="btn btn-danger" asp-controller="Matéria" asp-action="ApagarConfirmacao">Apagar</a>
            </div>
        </tr>
            }
        }
    </tbody>
</table>
</div>
