@{
    ViewData["Title"] = "Listagem de Alunos";

}
<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start"
     <a class="btn btn-primary" role="button" asp-controller="Aluno" asp-action="Aluno">Adcionar nova Aluno</a>
    </div>
<h1 class="display-4">Listagem de Alunos</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">email</th>
            <th scope="col">Matéria</th>
            <th scope="col">Nota</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (AlunoModel aluno in Model)
            {
                    <tr>
            <th scope="row">@aluno.Id</th>
            <td>@aluno.nome</td>
            <td>@aluno.email</td>
            <td>@aluno.Matéria </td>
            <div class="btn-group" role="group">
                <a role="button" class="btn btn-primary" asp-controller="Aluno" asp-action="Editar">Editar</a>
                <a role="button" class="btn btn-danger" asp-controller="Aluno" asp-action="ApagarConfirmacao">Apagar</a>

            </div>
            
                    </tr>
            }
        }
    </tbody>
</table>
</div>
